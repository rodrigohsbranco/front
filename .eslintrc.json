{
    "env": {
        "browser": true,
        "es2017": true
    },
    "extends": [
        "plugin:vue/base",
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:@typescript-eslint/recommended"
    ],
    "prettier/prettier": [
        "error",
        {
            "parser": "typescript"

        }
    ],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2017,
        // "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "no-debugger": "off"
    }
    
}
